<!-- 입력폼 -->
<div class="container">
    <div class="jumbotron jumbotron-fluid">
        <div>
            <h3 class="n2 ml-4">매치등록</h3>
            <br>
            <div class="n2 ml-4">입력 양식에 맞게 작성해주세요 ! </div>

        </div>
        <hr class="ml-4 mr-4">

        <div class="container">
            <form action="/matchRegister/create" method="post">



                <div class="form-group text-center" >
                    <label for="exampleInputEmail1" class="b1 lab mx-3" >팀명</label>
                    <div style="margin:0 auto;width:32%">
                        <input type="text" class="form-control" name="teamName" id="exampleInputEmail1" aria-describedby="emailHelp" >
                    </div>
                </div>
                <div class="b1 form-group text-center">
                    <label for="exampleInputPassword1" class="b1 lab mx-3" >종목</label>
                    <div style="margin:0 auto;width:32%">
                        <select name="event" class="form-control text-center" >

                            <option>축구</option>
                            <option>농구</option>
                            <option>풋살</option>
                        </select>
                        <div class="invalid-feedback">
                            종목을 입력해 주세요.
                        </div>
                    </div>
                </div>
                <div class="b1 form-group text-center">
                    <label for="exampleInputPassword1" class=" lab mx-3">인원수</label>
                    <div style="margin:0 auto;width:32%">
                        <select class="form-control text-center" name="people" >

                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                        </select>

                    </div>
                </div>
                <div class="b1 form-group text-center">
                    <label  for="exampleInputPassword1" class="  lab mx-3">팀실력</label>
                    <div style="margin:0 auto;width:32%">
                        <select class="form-control text-center" name="ability" >

                            <option>상</option>
                            <option>중</option>
                            <option>하</option>
                        </select>

                    </div>
                </div>

                <div class="b1 form-group text-center">
                    <label for="matchDate">날짜</label>
                    <div style="margin:0 auto;width:32%">
                        <input type="text" class="form-control" name="gameDay" id="datepicker" placeholder="" value="">
                    </div>
                </div>

                <div class="form-group text-center" >
                    <label  for="exampleInputEmail1" class="b1 lab mx-3" >전화번호</label>
                    <div style="margin:0 auto;width:32%">
                        <input type="text" class="form-control" name="phone" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder=" - 빼고입력" >
                    </div>
                </div>

                <br>
                <div class="b1 form-group  text-center">
                    <div class="col-md-12">
                        <label for="country">위치</label>
                        <div class="row justify-content-center">
                            <select class="custom-select col-md-3 mr-3" name ="sido" id="sido">
                            </select>
                            <select class="custom-select col-md-3 mr-3" name = "gungu1" id="gugun1">
                            </select>
                            <input type="text" class="form-control col-md-3 mr-2" name="location" id="zip" placeholder="상세 위치" >
                            <div class="invalid-feedback">
                                위치를 정확히 입력해 주세요.
                            </div>
                        </div>
                    </div>
                </div>

                <br>
                <hr>
                <div class="form-group text-center">
                    <label id="n2" for="exampleInputPassword1" class="b1 lab mx-3">추가 사항</label>
                    <div style="margin:0 auto;width:32%">
                        <p><textarea id="" cols="44" rows="8" name="wish" placeholder="상대 팀에게 바라는 점 등 원하시는 문구 작성"></textarea></p>
                    </div>
                </div>

                <div class="form-group text-center">


                    <div style="margin:0 auto;width:32%">
                        <button type="submit" class="b1 form-control btn btn-secondary" id="exampleInputPassword1" >전송</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="././js/daypicker.js"></script>
<script src="././js/addresskr.js"></script>
<br>
{{>layouts/footer}}
