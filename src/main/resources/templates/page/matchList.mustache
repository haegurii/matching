        <div class="container">
            <table id="table_id" class="table table-striped table-bordered" style="width:100%">

                <thead>

                <tr>
                    <th>비고</th>
                    <th>팀명</th>
                    <th>종목</th>
                    <th>인원</th>
                    <th>지역</th>
                    <th>매치 날짜</th>
                    <th>작성자</th>
                </tr>
                </thead>
                <tbody>

                {{#matchingList}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/matchInfo/stand/{{id}}">{{teamName}}</a></td>
                    <td>{{event}}</td>
                    <td>{{people}}</td>
                    <td>{{location}}</td>
                    <td>{{gameDay}}</td>
                    <td>{{teamName}}</td>
                </tr>
                {{/matchingList}}
                </tbody>

            </table>

        </div>
    </div>
</div>
